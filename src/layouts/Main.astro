---
import Head from "../components/Head.astro";

export interface Props {
  title: string;
  lang: string;
}

const { title, lang } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <Head title={title} />
  <body>
    <main>
      <slot />
    </main>
    <style>
      html {
        background: url(noise-bg.svg);
      }
    </style>
  </body>
</html>
